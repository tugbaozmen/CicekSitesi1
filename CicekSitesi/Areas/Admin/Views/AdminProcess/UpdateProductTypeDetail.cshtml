@model CicekSitesi.Model.ProductTypeDetail


@{
    ViewBag.Title = "UpdateProductTypeDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>UpdateProductTypeDetail</h2>

<h2>UpdateProductType</h2>

@if (ViewBag.Check != null)
{
    if (ViewBag.Check)
    {
        <h2>Ürün bulunamadı</h2> }
    else
    {
        @Html.ActionLink("Listeye Geri Dön", "ProductTypeDetailList")}
}


<h2>@Model.TypeDetailName Ürününü Güncelle</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left:270px;">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @Html.HiddenFor(model => model.ProductTypeDetailId)

        <div class="form-group">
            @Html.LabelFor(model => model.TypeDetailName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TypeDetailName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TypeDetailName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>}

<div>
    @Html.ActionLink("Listeye Don", "ListProductTypeDetail")
</div>



